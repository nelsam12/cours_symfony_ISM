{% extends 'base.html.twig' %}

{% block main %}

	.<div class="container">
		<div class="card">

			<div class="card-header">Enregistrement d'un client</div>
			<div class="card-body">

				{{ form_start(formClient) }}
				<div class="">
					{{ form_label(formClient.surname) }}
					{{ form_widget(formClient.surname) }}
					{{ form_errors(formClient.surname) }}
				</div>

				<div class="">
					{{ form_label(formClient.telephone) }}
					{{ form_widget(formClient.telephone) }}
					{{ form_errors(formClient.telephone) }}
				</div>
				<div class="">
					{{ form_label(formClient.adresse) }}
					{{ form_widget(formClient.adresse) }}
					{{ form_errors(formClient.adresse) }}
				</div>
				<div class="">
					{{ form_label(formClient.addUser) }}
					{{ form_widget(formClient.addUser, {'attr' : {
						'id' : 'client_addUser'
					}}) }}

				</div>

				{# {{ form_label(formClient.user.nom) }}
																{{ form_widget(formClient.user.nom) }}
																<div class="text-danger">
																	{% if errorsUser is defined %}
																		{{ errorsUser[0].getMessage() }}
																	{% endif %}
																</div> #}

				<div id='client_user'>
					<div class="form-group row mt-2">
						<label for="" class="col-form-label col-sm-2">Nom</label>
						<div class="col-sm-10">
							{{ form_widget(formClient.user.nom) }}
						</div>
						<div class="m-l-error-message">
							<div class="text-danger">
								{% if errorsUser[0] is defined %}
									{{ errorsUser[0].getMessage() }}
								{% endif %}
							</div>
						</div>
					</div>

					<div class="form-group row mt-2">
						<label for="" class="col-form-label col-sm-2">Prenom</label>
						<div class="col-sm-10">
							{{ form_widget(formClient.user.prenom) }}
						</div>
						<div class="m-l-error-message">
							<div class="text-danger">
								{% if errorsUser[1] is defined %}
									{{ errorsUser[1].getMessage() }}
								{% endif %}
							</div>
						</div>
					</div>

					<div class="form-group row mt-2">
						<label for="" class="col-form-label col-sm-2">Login</label>
						<div class="col-sm-10">
							{{ form_widget(formClient.user.login) }}
						</div>
						<div class="m-l-error-message">
							<div class="text-danger">
								{% if errorsUser[2] is defined %}
									{{ errorsUser[2].getMessage() }}
								{% endif %}
							</div>
						</div>
					</div>
					<div class="form-group row mt-2">
						<label for="" class="col-form-label col-sm-2">Password</label>
						<div class="col-sm-10">
							{{ form_widget(formClient.user.password) }}
						</div>
						<div class="m-l-error-message">
							<div class="text-danger">
								{% if errorsUser[3] is defined %}
									{{ errorsUser[3].getMessage() }}
								{% endif %}
							</div>
						</div>
					</div>
				</div>
				{{ form_end(formClient) }}

			</div>
		</div>
	</div>
	{% block myScript %}
		 <script src = "{{asset('controllers/form_client.js')}}"></script>

	{% endblock %}
{% endblock %}
